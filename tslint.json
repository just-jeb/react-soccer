{
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],

  "extends": [
    "tslint-config-prettier", "tslint-react"
  ],

  "rules": {
    "prettier": {
      "severity": "warning",
      "options": {
        "singleQuote": true,
        "trailingComma": "all"
      }
    },
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false
  }
}
